# Django Configuration
#
# REQUIRED environment variables (app will not start without these):
#   SECRET_KEY, DATABASE_URL, REDIS_URL, SOROBAN_RPC_URL,
#   STELLAR_NETWORK_PASSPHRASE, SOROSCAN_CONTRACT_ID
#
# SECURITY WARNING: Generate a unique secret key for production
# The SECRET_KEY is used for JWT token signing and Django security features
SECRET_KEY=django-insecure-change-this-in-production

# Debug mode - NEVER set to True in production
DEBUG=True

# Comma-separated list of allowed hosts
# For Docker Compose: use * when DEBUG=True, or specify domains for production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
FRONTEND_BASE_URL=http://localhost:3000

# Database Configuration
# For Docker Compose with default setup: postgresql://postgres:postgres@db:5432/soroscan
# For local dev without Docker: postgresql://user:password@localhost:5432/soroscan
# Leave commented for SQLite (development only)
DATABASE_URL=postgresql://postgres:postgres@db:5432/soroscan

# Redis Configuration
# For Docker Compose with default setup: redis://redis:6379/0
# For local dev without Docker: redis://localhost:6379/0
REDIS_URL=redis://redis:6379/0

# Stellar/Soroban Configuration
SOROBAN_RPC_URL=https://soroban-testnet.stellar.org
STELLAR_NETWORK_PASSPHRASE=Test SDF Network ; September 2015

# SoroScan Contract Configuration
# Deploy the contract and update these values
SOROSCAN_CONTRACT_ID=CCAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA

# Indexer keypair (generate with: stellar keys generate indexer)
INDEXER_SECRET_KEY=SCXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# CORS Configuration
# Comma-separated list of allowed origins (leave empty to use CORS_ALLOW_ALL_ORIGINS when DEBUG=True)
# Example: http://localhost:3000,http://localhost:5173
# For production, specify your frontend domain(s)
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Logging Configuration
# Set to "json" for structured JSON logs (recommended for production)
LOG_FORMAT=

# Sentry Configuration (Optional)
# Leave empty to disable Sentry error tracking
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# Docker Compose Port Overrides (Optional)
# Uncomment to override default ports if you have conflicts
# POSTGRES_PORT=5432
# REDIS_PORT=6379
# WEB_PORT=8000

# Rate Limiting Configuration
# Format: <requests>/<time_period> (e.g., 60/minute, 300/hour)
# Time periods: second, minute, hour, day
RATE_LIMIT_ANON=60/minute
RATE_LIMIT_USER=300/minute
RATE_LIMIT_INGEST=10/minute
RATE_LIMIT_GRAPHQL=100/minute
